---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const images = await Astro.glob("../../public/images/*.jpg");
---

<Layout title="Welcome to Astro.">
	<main>
		<h1 style="display: block;">
			Visor de uniformes <span class="text-gradient">Chuy FC</span>
		</h1>
		<p class="instructions">
			Pagina temoral para ver los uniformes para el equipo.<br />
			Da <strong>click</strong> en la imagen para verla en tamaño orginal.
		</p>
		<ul role="list" class="link-card-grid">
			{
				images.map((img) => (
					<Card
						src={img.default.replace("/public", "")}
						title={img.default.replace(
							"/public/images/IMG-20230106-WA0",
							""
						)}
					/>
				))
			}
		</ul>

		<!-- Actual Lightbox -->
		<div id="lightbox" class="hidden lightbox">
			<div onclick="closeLightbox()" class="close">❌</div>
			<div class="lightbox-content">
				<img id="lightbox-image" />
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		width: 100%;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(5, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0.5rem;
	}

	@media only screen and (max-width: 1300px) {
		.link-card-grid {
		display: grid;
		grid-template-columns: repeat(3, minmax(24ch, 1fr));
		gap: 0.5rem;
		padding: 0.5rem;
	}
	}

	.lightbox {
		position: fixed;
		z-index: 1;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		overflow: auto;
		opacity: 1;
		visibility: visible;
		transition: all 0.3s ease;
	}
	.lightbox.hidden {
		opacity: 0;
		visibility: hidden;
	}
	.lightbox .close {
		position: absolute;
		right: 2.5%;
		top: 2.5%;
		font-size: 2rem;
		cursor: pointer;
	}
	.lightbox-content {
		display: flex;
		margin: 5%;
		align-items: center;
		justify-content: center;
	}
	.lightbox-content img {
		max-width: 100%;
		max-height: 100%;
		border: 5px solid #fff;
	}
</style>
